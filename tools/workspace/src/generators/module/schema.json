{
  "$schema": "https://json-schema.org/schema",
  "$id": "Module",
  "title": "Create a new module",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Module slug/name (e.g., 'onboarding-101', 'security-basics')",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the module slug/name?"
    }
  },
  "required": ["name"]
}
